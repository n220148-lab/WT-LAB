    <!-- ======== SIMPLE JAVASCRIPT ADDED BELOW ======== -->
    <script>
        // Welcome popup on page load
        window.onload = function() {
            alert("Welcome to RequestPal Home Services!");
        };

        // Click on any service box to show service name
        const services = document.querySelectorAll(".service-box");
        services.forEach(function(box) {
            box.addEventListener("click", function() {
                const name = this.querySelector("h3").innerText;
                alert("You selected: " + name);
            });

            // Hover effect using JS (not CSS change)
            box.addEventListener("mouseover", function() {
                this.style.boxShadow = "0 0 15px #000";
            });

            box.addEventListener("mouseout", function() {
                this.style.boxShadow = "0 0 5px #ccc";
            });
        });

        // Book Service prompt
        const bookLink = document.getElementById("bookLink");
        bookLink.addEventListener("click", function() {
            let service = prompt("Which service do you want to book?");
            if(service) {
                alert("Thank you! We will arrange " + service + " service shortly.");
            }
        });

        // Contact Click
        const contactLink = document.getElementById("contactLink");
        contactLink.addEventListener("click", function() {
            alert("Contact us at: support@requestpal.com");
        });
    </script>

